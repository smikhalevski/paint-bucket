{
  "name": "@paint-bucket/gradient-plugin",
  "version": "1.0.0",
  "description": "Gradient manipulation plugin for Paint Bucket.",
  "main": "./lib/index-cjs.js",
  "module": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "tsc --project ./tsconfig.build.json && npm run rollup && npm run terser",
    "rollup": "rollup --no-treeshake --external @paint-bucket/core,@paint-bucket/gradient,@paint-bucket/plugin-utils --input ./lib/index.js --file ./lib/index-cjs.js --format cjs --plugin @rollup/plugin-node-resolve",
    "terser": "for file in $(find ./lib -name '*.js'); do terser --compress --mangle --output $file -- $file; done || exit 1",
    "clean": "rimraf ./lib",
    "test": "jest --detectOpenHandles"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smikhalevski/paint-bucket.git"
  },
  "keywords": [
    "color",
    "decode",
    "hex",
    "rgb",
    "rgba",
    "hsl",
    "hsla"
  ],
  "author": "Savva Mikhalevski <smikhalevski@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/smikhalevski/paint-bucket/issues"
  },
  "homepage": "https://github.com/smikhalevski/paint-bucket#readme",
  "jest": {
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "ignoreCodes": [
            151001
          ]
        }
      }
    }
  },
  "dependencies": {
    "@paint-bucket/core": "^1.0.0",
    "@paint-bucket/gradient": "^1.0.0",
    "@paint-bucket/plugin-utils": "^1.0.0"
  }
}
