{
  "name": "paint-bucket",
  "version": "1.1.0",
  "description": "Highly performant, extensible, and tiny color manipulation library.",
  "main": "./lib/index-cjs.js",
  "module": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "tsc --project ./tsconfig.build.json && rollup --config ../../rollup.config.js && npm run terser",
    "terser": "for file in $(find ./lib -name '*.js'); do terser --compress --mangle --output $file -- $file; done || exit 1",
    "clean": "rimraf ./lib",
    "test": "jest --detectOpenHandles"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smikhalevski/paint-bucket.git"
  },
  "keywords": [
    "color",
    "decode",
    "hex",
    "rgb",
    "rgba",
    "hsl",
    "hsla"
  ],
  "author": "Savva Mikhalevski <smikhalevski@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/smikhalevski/paint-bucket/issues"
  },
  "homepage": "https://github.com/smikhalevski/paint-bucket#readme",
  "dependencies": {
    "@paint-bucket/core": "^1.1.0",
    "@paint-bucket/css-plugin": "^1.1.0",
    "@paint-bucket/difference-plugin": "^1.1.0",
    "@paint-bucket/gradient-plugin": "^1.1.0",
    "@paint-bucket/hsv": "^1.1.0",
    "@paint-bucket/hsl-plugin": "^1.1.0",
    "@paint-bucket/rgb-plugin": "^1.1.0",
    "@paint-bucket/x11-plugin": "^1.1.0"
  }
}
