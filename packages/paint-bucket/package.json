{
  "name": "paint-bucket",
  "version": "1.0.2-next.1",
  "description": "Highly performant, extensible, and tiny color manipulation library.",
  "main": "./lib/index-cjs.js",
  "module": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "sideEffects": false,
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "tsc --project ./tsconfig.build.json && npm run rollup && npm run terser",
    "rollup": "rollup --external @paint-bucket/core,@paint-bucket/hsl,@paint-bucket/hsv,@paint-bucket/lab,,@paint-bucket/xyz,@paint-bucket/rgb-plugin,@paint-bucket/hsl-plugin,@paint-bucket/x11-plugin,@paint-bucket/css-plugin,@paint-bucket/difference-plugin,@paint-bucket/gradient-plugin --input ./lib/index.js --file ./lib/index-cjs.js --format cjs --plugin @rollup/plugin-node-resolve",
    "terser": "for file in $(find ./lib -name '*.js'); do terser --compress --mangle --output $file -- $file; done || exit 1",
    "clean": "rimraf ./lib",
    "test": "jest --detectOpenHandles",
    "perf": "[ -d ./lib ] || npm run build && node --expose-gc --max-old-space-size=4096 ./src/test/perf.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smikhalevski/paint-bucket.git"
  },
  "keywords": [
    "color",
    "decode",
    "hex",
    "rgb",
    "rgba",
    "hsl",
    "hsla"
  ],
  "author": "Savva Mikhalevski <smikhalevski@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/smikhalevski/paint-bucket/issues"
  },
  "homepage": "https://github.com/smikhalevski/paint-bucket#readme",
  "jest": {
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "ignoreCodes": [
            151001
          ]
        }
      }
    }
  },
  "devDependencies": {
    "@smikhalevski/perf-test": "^1.0.0",
    "chalk": "^4.1.2",
    "chroma-js": "^2.1.2",
    "tinycolor2": "^1.4.2"
  },
  "dependencies": {
    "@paint-bucket/core": "1.0.2-next.1",
    "@paint-bucket/css-plugin": "1.0.2-next.1",
    "@paint-bucket/difference-plugin": "1.0.2-next.1",
    "@paint-bucket/hsv": "1.0.2-next.1",
    "@paint-bucket/hsl-plugin": "1.0.2-next.1",
    "@paint-bucket/rgb-plugin": "1.0.2-next.1",
    "@paint-bucket/x11-plugin": "1.0.2-next.1",
    "@paint-bucket/gradient-plugin": "1.0.2-next.1"
  }
}
