{
  "compilerOptions": {
    "importHelpers": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "moduleResolution": "Node",
    "strict": true,
    "target": "ES5",
    "module": "ES6",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@paint-bucket/*": [
        "./packages/*/src/main"
      ],
      "@paint-bucket/core/lib/*": [
        "./packages/core/src/main/*"
      ]
    }
  },
  "include": [
    "./packages/*/src/main/**/*"
  ]
}
